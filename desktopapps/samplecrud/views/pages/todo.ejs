<!DOCTYPE html>
<html lang="en">

<head>


    <meta charset="utf-8">

    <meta name="author" content="">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Todo App</title>
    <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
    <html href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

    <%- include('../partials/head'); %>


</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <section class="containers">

            <!-- form to create task -->
            <form action="/create-task" method="POST">

                <table class="table">
                    <thead>
                        <tr class="table-active">
                            <th>Add Task</th>
                            <th>category</th>
                            <th>date</th>
                            <th></th>
                        </tr>
                    </thead>


                    <tbody>
                        <tr>
                            <table>
                                <table type="text" name="description" placeholder="What do you need to do?" required></table>
                                <td> <select name="category" required>

                        <option>PERSONAL</option>
                        <option>WORK</option>
                        <option>SCHOOL</option>
                        <option>CLEANING</option>
                        <option>OTHER</option>

                    </select></td>

                                <tbody>
                                    <tbody type="date" name="date" required></tbody>
                                    <td><input type="submit" class="btn btn-success" id="add" value="ADD TASK"></td>
                        </tr>
                        </tbody>

                        </table>

            </form>
        </section>

        /***********/
        <div>
            <h1 align="center">TASKS LIST</h1>

            <form action="/delete-task" method="GET">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Select</th>
                            <th>Task</th>
                            <th>Category</th>
                            <th>due date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i of task) { %>

                            <tr>
                                <td> <input type="checkbox" name="<%= i._id %>"></td>
                                <td>
                                    <p id="task-description">
                                        <%= i.description %>
                                </td>
                                <td>
                                    <p id="task-category"></p>:
                                    <%= i.category %>
                                </td>
                                <td>
                                    <p id="due-date">:
                                        <%= i.date %>
                                    </p>
                                </td>
                            </tr>




                            <a href="/edit/<%= details._id %>" class="edit">
                                <span class="fas fa-edit"></span>
                            </a>
                            <a href="/remove/<%= details._id %>" class="remove">
                                <span class="fas fa-times"></span>
                            </a>


                            <input type="submit" class="btn btn-danger" value="DELETE TASK">
                            <% } %>
                    </tbody>
                </table>
            </form>

        </div>

    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>

</html>